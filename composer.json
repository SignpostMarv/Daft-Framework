{
    "name": "signpostmarv/daft-framework",
    "description": "Daft Framework",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "SignpostMarv",
            "email": "me@signpostmarv.name"
        }
    ],
    "autoload": {
        "psr-4": {
            "SignpostMarv\\DaftFramework\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FastRoute\\": "./vendor/nikic/fast-route/test/",
            "SignpostMarv\\DaftFramework\\Tests\\": "./Tests/",
            "SignpostMarv\\DaftRouter\\Tests\\": "./vendor/signpostmarv/daft-router/tests/daft-router/",
            "SignpostMarv\\DaftRouter\\Tests\\FastRoute\\": "./vendor/signpostmarv/daft-router/tests/fast-route/"
        }
    },
    "config": {
        "classmap-authoritative": true,
        "sort-packages": true
    },
    "scripts": {
        "tests": [
            "phpunit -vvvv",
            "phpstan analyse -c ./phpstan.neon .php_cs.dist src tests ./tests/fixtures/bin/daft-framework",
            "psalm",
            "phpcpd src",
            "phpmnd src",
            "php-cs-fixer fix --verbose --allow-risky=yes --dry-run"
        ]
    },
    "require": {
        "php": "^7.1",
        "paragonie/easydb": "^2.6",
        "signpostmarv/daft-interface-collector": "^0.4.2",
        "signpostmarv/daft-router": "^0.2.2",
        "symfony/console": "^4.0",
        "symfony/http-foundation": "^4.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-phpunit": "^0.9.4",
        "phpstan/phpstan-strict-rules": "^0.9.0",
        "phpunit/phpunit": "^7.1",
        "povils/phpmnd": "^2.0",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^4.0",
        "signpostmarv/php-cs-fixer-config": "^0.5.0",
        "vimeo/psalm": "^1.1"
    }
}
